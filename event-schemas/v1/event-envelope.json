{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EventEnvelope",
  "type": "object",
  "required": [
    "eventId",
    "eventType",
    "aggregateId",
    "payload",
    "occurredAt",
    "version"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "eventType": {
      "type": "string"
    },
    "aggregateId": {
      "type": "string"
    },
    "payload": {
      "type": "object"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    }
  },
  "additionalProperties": false
}
