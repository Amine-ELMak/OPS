{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrderCreatedPayload",
  "type": "object",
  "required": ["orderId", "amount", "items"],
  "properties": {
    "orderId": { "type": "string" },
    "amount": { "type": "number" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sku", "quantity"],
        "properties": {
          "sku": { "type": "string" },
          "quantity": { "type": "integer", "minimum": 1 }
        }
      }
    }
  }
}